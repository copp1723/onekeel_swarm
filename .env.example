# OneKeel Swarm Environment Configuration Template
# Copy this to .env.local for development

# === SECURITY SETTINGS ===
# NEVER set these to true in production
SKIP_AUTH=false
NODE_ENV=development

# === DATABASE ===
DATABASE_URL=postgresql://username:password@localhost:5432/onekeel_dev

# === JWT CONFIGURATION ===
# Generate secure secrets using: node -e "console.log(require('crypto').randomBytes(48).toString('base64'))"
JWT_SECRET=your-secret-here-minimum-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-here-minimum-32-chars
SESSION_SECRET=your-session-secret-here

# === API CONFIGURATION ===
PORT=3001
CORS_ORIGIN=http://localhost:3000

# === EMAIL CONFIGURATION ===
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-domain.com

# === MONITORING ===
ENABLE_ACCESS_LOGS=true
ENABLE_SECURITY_MONITORING=true

# === DEVELOPMENT ONLY ===
# These should be false or removed in production
DEBUG=false
VERBOSE_LOGGING=false