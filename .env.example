# SECURITY NOTICE: Never commit .env files with real values to version control
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV=development
MEMORY_LIMIT=1024
USE_MINIMAL_SERVER=false

# Server URLs (update for your deployment)
ALLOWED_ORIGINS=http://localhost:3000
API_BASE_URL=http://localhost:5000
CLIENT_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Database Configuration (use your actual database URL)
DATABASE_URL=postgresql://user:password@localhost:5432/onekeel_swarm

# JWT Configuration (GENERATE NEW SECRETS - DO NOT USE THESE EXAMPLES)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=generate_a_new_64_character_secret_key_here
JWT_REFRESH_SECRET=generate_a_different_64_character_secret_key_here
SESSION_SECRET=generate_another_32_character_secret_key_here

# Encryption Key (GENERATE NEW - DO NOT USE THIS EXAMPLE)
ENCRYPTION_KEY=generate_a_new_64_character_encryption_key_here

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
ENABLE_AGENTS=true
ENABLE_MONITORING=false
ENABLE_REDIS=false
ENABLE_WEBSOCKET=true

# Email Configuration (Mailgun)
EMAIL_PROVIDER=mailgun
EMAIL_TEMPLATES_ENABLED=true
EMAIL_TEMPLATE_COUNT=30
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here
MAILGUN_FROM_EMAIL=your_from_email_here

# Redis Configuration (if using)
REDIS_URL=redis://localhost:6379

# Twilio Configuration (if using SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# OpenRouter API Configuration (if using AI features)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# API Keys (for additional security)
VALID_API_KEYS=comma,separated,list,of,valid,api,keys

# CRITICAL: Never set SKIP_AUTH=true in production
SKIP_AUTH=false